<%- include ('../../partials/header') %> <%- include ('../../partials/navBar')
%>

<div class="container">
  <hr />
  <div class="card">
    <div class="card-header">
      <h2>Novo artigos</h2>
    </div>
    <div class="card-body">
      <form method="POST" action="/categories/save">
        <input
          class="form-control"
          type="text"
          name="title"
          placeholder="Defina o titulo do artigo"
        /><br />
        <textarea
          class="form-control"
          name="body"
          placeholder="Escreva o artigo aqui"
          id="article"
        ></textarea
        ><br />
        <button class="btn btn-success">Cadastrar</button>
      </form>
    </div>
  </div>
</div>

<%- include ('../../partials/footer') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
  tinymce.init({
    selector: "#article",
    plugins: [
      "advlist",
      "autolink",
      "link",
      "lists",
      "print",
      "preview",
      "hr",
      "searchreplaced",
      "wordcount",
      "fullscreen",
      "insertdatetime",
      " media",
      "save",
      "table",
      "paste",
      "emoticons",
    ],
    language: 'pt_BR',
  });
</script>
